<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Attachment</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.attachment %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post, class: 'post-btn btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: 'post-btn btn btn-warning' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, class: 'post-btn btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: 'post-btn btn btn-primary' %>
